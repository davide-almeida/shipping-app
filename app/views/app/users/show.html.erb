<h1 class="mt-4 mb-4">Colaborador(a) - <%= @user.firstname %></h1>

<div class="card">
  <div class="card-header">
    <h2><%= @user.firstname %> <%= @user.lastname %></h2>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><strong>Nome: </strong><%= @user.firstname %></li>
    <li class="list-group-item"><strong>Sobrenome: </strong><%= @user.lastname %></li>
    <li class="list-group-item"><strong>E-mail: </strong><%= @user.email %></li>
  </ul>
</div>

<div class="mt-4 mb-4">
  <div class="button-form-group">
    <div class="button-form-item">
      <%= link_to 'Editar', edit_app_user_path(@user.id), class:"btn btn-primary" %>
    </div>
    <div class="button-form-item">
      <%= link_to 'Voltar', app_users_path, class:"btn btn-secondary" %>
    </div>
  </div>
</div>