<% if @shipping_company.errors.any? %>
    <p>Verifique os erros abaixo:</p>
    <ul>
        <% @shipping_company.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Formul√°rio
    </div>
    <div class="card-body">
        <%= form_with(model: [:app, @shipping_company]) do |f| %>
            <div class="mb-3">
                <%= f.label :corporate_name, class:"form-label" %>
                <%= f.text_field :corporate_name, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :brand_name, class:"form-label" %>
                <%= f.text_field :brand_name, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :domain, class:"form-label" %>
                <%= f.text_field :domain, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :registration_number, class:"form-label" %>
                <%= f.text_field :registration_number, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :full_address, class:"form-label" %>
                <%= f.text_field :full_address, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :status, class:"form-label" %>
                <%#= f.collection_select(:supplier_id, @status_options_for_select, :id, :brand_name, {include_blank: false}, {class:"form-select"}) %>
                <%= f.select(:status, options_for_shipping_company_status(@shipping_company.status), {:selected => "Ativo"}, {:class =>"form-select", include_blank: false})%>
            </div>
            <div class="mb-3">
                <%= f.submit 'Cadastrar', disable_with: 'Cadastrando...', class:"btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
