<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Transportadora - Login</h3></div>
                        <div class="card-body">
                            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                <div class="form-floating mb-3">
                                    <%= f.email_field :email, autocomplete: "email", class:"form-control", placeholder:"name@example.com" %>
                                    <%= f.label :email %>
                                </div>
                                <div class="form-floating mb-3">
                                    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"password" %>
                                    <%= f.label :password %>
                                </div>
                                <% if devise_mapping.rememberable? %>
                                  <div class="form-check mb-3">
                                      <%= f.check_box :remember_me, class:"form-check-input" %>
                                      <%= f.label :remember_me, class:"form-check-label" %>
                                  </div>
                                <% end %>
                                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <div class="small">
                                      <%= render "users/shared/links" %>
                                    </div>
                                    <%= f.submit "Entrar", class:"btn btn-primary" %>
                                </div>
                            <% end %>
                        </div>
                        <div class="card-footer text-center py-3">
                            <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>