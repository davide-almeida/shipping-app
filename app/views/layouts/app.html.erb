<!DOCTYPE html>
<html>
  <head>
    <title>Shipping - Dashboard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "app/styles" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= javascript_include_tag "app", "data-turbo-track": "reload", defer: true %>
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>

    <!-- datatable -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/1.12.0/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.0/js/dataTables.bootstrap4.min.js"></script>
  </head>

  <body class="sb-nav-fixed">
    <%= render 'layouts/app_shared/topbar' %>

    <div id="layoutSidenav">
      <!-- MENU -->
      <%= render 'layouts/app_shared/leftbar' %>

      <!-- CONTENT -->
      <div id="layoutSidenav_content">
        <!-- CONTENT MAIN -->
        <main>
            <div>
              <%= notice %>
              <%= alert %>
            </div>
            <div class="container-fluid px-4">
                <%= yield %>
            </div>
        </main>

        <!-- FOOTER -->
        <%= render 'layouts/app_shared/footer' %>

      </div>
    </div>
  </body>
</html>