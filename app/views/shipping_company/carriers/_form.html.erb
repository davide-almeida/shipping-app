<% if @carrier.errors.any? %>
    <p>Verifique os erros abaixo:</p>
    <ul>
        <% @carrier.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Formul√°rio
    </div>
    <div class="card-body">
        <%= form_with(model: [:shipping_company, @carrier]) do |f| %>
            <div class="mb-3">
                <%= f.label :license_plate, class:"form-label" %>
                <%= f.text_field :license_plate, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :brand, class:"form-label" %>
                <%= f.text_field :brand, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :code_model, class:"form-label" %>
                <%= f.text_field :code_model, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :manufact_year, class:"form-label" %>
                <%= f.number_field :manufact_year, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :weight, class:"form-label" %>
                <%= f.number_field :weight, class:"form-control" %>
            </div>
            <div class="mb-3">
                <%= f.submit 'Cadastrar', disable_with: 'Cadastrando...', class:"btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
