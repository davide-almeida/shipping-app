<!-- Header-->
<header class="masthead d-flex align-items-center">
 
    <div class="track-routes-form">
        <div class="container px-4 px-lg-5 bg-white-font">
            <div class="card">
                <div class="card-header">
                    <h3>ShippingApp - Rastreio</h3>
                </div>
                <div class="card-body">
                    <%= form_with(url: site_search_path, method: :get) do |f| %>
                        <div class="mb-3 row">
                            <div class="col">
                                <%= f.label :search_code, class:"form-label" %>
                                <%= f.text_field :search_code, class:"form-control", value: @order_service.code %>
                            </div>
                        </div>
                        <div class="mb-3">
                            <%= f.submit 'Buscar', disable_with: 'Buscando...', class:"btn btn-primary" %>
                        </div>
                    <% end %>

                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Histórico da rota
                        </div>
                        <div class="card-body">
                            <table id="datatable" class="table table-bordered" style="">
                                <thead>
                                <tr>
                                    <th>Status da rota</th>
                                    <th>Local atual</th>
                                    <th>Última atualização</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% @order_service.order_routes.each do |order_route| %>
                                    <tr>
                                        <td><%= order_route.status %></td>
                                        <td><%= order_route.current_location %></td>
                                        <td><%= order_route.current_time.strftime("%d/%m/%Y - %H:%M") %></td>
                                    </tr>
                                <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</header>
